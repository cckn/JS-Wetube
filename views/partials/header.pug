header.header
    .header__column
        a(href=routes.home)
            i.fab.fa-youtube.fa-7x
    .header__column
        form(action=routes.search, method="get")
            input(type="text", name="term", placeholder=`검색어를 입력해주세요.`)
    .header__column
        ul
            if !user.isAuthenticated
                li 
                    a(href=routes.join) Join
                li 
                    a(href=routes.login) Log in

            else

                li 
                    a(href=routes.users+routes.upload) Uplode
                li 
                    a(href=routes.users+routes.userDetail(user.id)) Profile
                li 
                    a(href=routes.logout) Log out
